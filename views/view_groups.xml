<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="model_group_view_list" model="ir.ui.view">
        <field name="name">model_groups.view.list</field>
        <field name="model">new_module.groups</field>
        <field name="type">tree</field>
        <field name="arch" type="xml"> 
            <tree>
                <field name="group_faculty"/>
                <field name="group_num"/>
                <field name="creating_date"/>
            </tree>
        </field>
    </record>

    <record id="model_group_view_form" model="ir.ui.view">
        <field name="name">model_group.view.form</field>
        <field name="model">new_module.groups</field>
        <field name="type">form</field>
        <field name="arch" type="xml"> 
            <form>
                <sheet>
                    <group>
                        <field name="group_faculty"/>
                        <field name="group_num"/>
                        <field name="creating_date"/>
                    </group>
                    <notebook>
                        <page string="Студенты">
                            <field name="students_table">
                                <tree>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="age"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Преподаватели">
                            <field name="prepods_table">
                                <tree>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="middle_name"/>
                                    <field name="subject"/>
                                </tree>
                            </field>
                        </page>
                        <!-- <page string="Оценки студентов">
                            <field name="grades_table">
                                <tree>
                                    <field name="student_id"/>
                                    <field name="grade"/>
                                    <field name="teacher_id"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="model_group_action_menu" model="ir.actions.act_window">
        <field name="name">Группа</field>
        <field name="res_model">new_module.groups</field>
        <field name="views">[[False, "tree"], [False, "form"]]</field> 
    </record>
</odoo>
