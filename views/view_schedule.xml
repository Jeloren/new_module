<odoo>
    <record id="view_schedule_tree" model="ir.ui.view">
        <field name="name">new_module.schedule.tree</field>
        <field name="model">new_module.schedule</field>
        <field name="arch" type="xml">
            <tree string="Schedule" editable="bottom">
                <field name="week_day"/>
                <field name="f_group"/>
                <field name="f_subj"/>
            </tree>
        </field>
    </record>



    <record id="view_schedule_form" model="ir.ui.view">
        <field name="name">new_module.schedule.form</field>
        <field name="model">new_module.schedule</field>
        <field name="arch" type="xml">
            <form string="Schedule">
                <sheet>
                    <group>
                        <field name="week_day"/>
                        <field name="f_group"/>
                        <field name="f_subj"/>
                    </group>
                    <group string="Schedule Lines">
                        <field name="schedule_lines">
                            <tree string="Schedule Lines">
                                <field name="time_start"/>
                                <field name="time_end"/>
                                <field name="subject_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="schedule_action_menu" model="ir.actions.act_window">
        <field name="name">Schedule</field>
        <field name="res_model">new_module.schedule</field>
        <field name="views">[[False, "tree"], [False, "form"]]</field> 
    </record>
</odoo>
